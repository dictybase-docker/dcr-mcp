{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(curl:*)",
      "Bash(sed:*)",
      "Bash(git checkout:*)",
      "Bash(git fetch:*)",
      "Bash(git merge:*)",
      "Bash(git shortlog:*)",
      "Bash(go install:*)",
      "Bash(go test:*)",
      "Bash(gofumpt:*)",
      "Bash(golangci-lint run:*)",
      "Bash(gotestsum:*)",
      "Bash(gotestum:*)",
      "Bash(go build:*)",
      "Bash(cp:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(go doc:*)",
      "Bash(go get:*)",
      "Bash(go list:*)",
      "Bash(go mod tidy:*)",
      "Bash(mkdir:*)",
      "Bash(rm:*)",
      "mcp__fetcher__fetch_url",
      "mcp__github__create_repository",
      "mcp__gmail__search_emails",
      "mcp__playwright__playwright_click",
      "mcp__playwright__playwright_close",
      "mcp__playwright__playwright_evaluate",
      "mcp__playwright__playwright_get",
      "mcp__playwright__playwright_navigate",
      "mcp__playwright__playwright_screenshot",
      "WebFetch(domain:github.com)",
      "Bash(golangci-lint:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ],
    "defatultMode": "plan"
  },
  "model": "opusplan",
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "playwright",
    "repomix",
    "memory",
    "mermaid",
    "context7",
    "fetch",
    "github",
    "git",
    "markitdown"
  ],
  "statusLine": {
    "type": "command",
    "command": "bunx @owloops/claude-powerline@latest --config=${XDG_CONFIG_HOME}/llm-setup/claude/powerline.json"
  },
  "outputStyle": "Learning"
}